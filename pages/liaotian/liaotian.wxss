/* pages/liaotian/liaotian.wxss */

.inf{
  height: 50px;
  float: left;
  text-align: center;
}

.inf_bg1{
  height: 30px;
  background: #6CC3C1;
  position: relative;
  left: 0;
  top: 0;
}

.inf_bg2{
  position: absolute;
  background: #fff;
  height: 50px;
  line-height: 50px;
  left: 10px;
  top: 0;
  border-radius: 25px;
  font-size: 14px;
  color: #333;
  box-shadow: 1px 1px 5px 1px #ccc;

}

.box{
  height: 80px;
  background: #fff;
  margin: 0 auto;
  border-bottom: 1px solid whitesmoke;
}

.imgsize{
  width: 40px;
  height: 40px;
  margin: 20px 0 0 10px;
  border-radius: 8px;
  float: left;
}

.tit{
  position: relative;
}

.tit1{
  font-size: 14px;
  line-height: 20px;
  position: absolute;
  left: 60px;
  top: 20px;
}

.tit2{
  font-size: 11px;
  color: #999;
  line-height: 20px;
  position: absolute;
  left: 60px;
  top: 40px;
}

.tit3{
  font-size: 10px;
  color: #999;
  line-height: 20px;
  position: absolute;
  right: 10px;
  top: 20px;
}








