/* pages/index/shops/shops.wxss */

.headtop{
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.tittop{
  padding: 15px;
}
.btl{
  float: left;
}
.btl_tit{
  font-size: 14px;
  font-weight: bold;
  color: #333;
  line-height: 24px;
}
.btl_num{
  font-size: 10px;
  color: #999;
}
.btr{
  float: right;
}
.btr_fol{
  font-size: 12px;
  color: #999;
  padding: 5px 10px;
  border: 1px solid whitesmoke;
  border-radius: 12px;
  /* background: red; */
  font-weight: bold;
}


.navbox{
  margin-left: 35px;
}
.navitem{
  text-align: center;
  font-size: 14px;
  font-weight: bold;
  color: #333;
  float: left;
}
.fontcol{
  font-size: 16px;
  color: #6CC3C1;
}


.centent{
  height: auto;
}





.footer{
  position: fixed;
  background: #fff;
  bottom: 0;
  left: 0;
}
.imgsize{
  width: 36px;
  height: 36px;
  padding-left: 20px;
  padding-right: 20px;
  float: left;
}
.navpic{
  float: left;
  padding: 6px 0 4px; 
}
.picimg{
  width: 16px;
  height: 16px;
}
.titsize{
  font-size: 10px;
  color: #999;
  text-align: center;
  line-height: 14px;
}




/* 首页模块样式 */
.show_card{
  background: #fff;
  border-radius: 8px;
  margin-left: 10px;
  margin-bottom: 10px;
  overflow: hidden;
  float: left;
}
.show_txt{
  height: 40px;
  font-size: 12px;
  margin: 5px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 20px;
}
.show_num{
  color: red;
  font-size: 12px;
  padding-left: 10px;
}


