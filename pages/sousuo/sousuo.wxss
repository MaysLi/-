.vic{
  display: flex;
  padding-top: 5px;
  background: #fff;
  margin-bottom: 10px;
}
.vi{
  height: 50px;
}
.vi_l{
  width: 40px;
  float: left;
}
.vi_img{
  width: 30px;
  height: 30px;
  margin: 10px 0 0 10px;
}
.vi_c{
  flex: 1;
}
.vi_sou{
  width: 92%;
  height: 32px;
  border: 1px solid #ccc;
  margin: 9px auto;
  border-radius: 8px;
  overflow: hidden;
}
.vi_input{
  width: 75%;
  height: 32px;
  float: left;
}
.vi_button{
  width: 25%;
  height: 32px;
  float: left;
  background: #6CC3C1;
  color: #fff;
  font-size: 16px;
  text-align: center;
  line-height: 32px;
}
.vi_div{
  background: #fff;
  margin-left: 10px;
  border-radius: 8px;
  margin-bottom: 10px;
  float: left;
  overflow: hidden;
}
.rosepa{
  height: 26px; 
  line-height: 13px;
  padding-left: 5px;
  font-size: 9px;
  color: #707070;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

.bjlr{
  height: 34px;
  float: left;
}

.lw{
  width: 66%;
  padding-left: 2%;
}

.rw{
  width: 32%;
}

.imgsize{
  width: 25px;
  height: 25px;
  border-radius: 50%;
  float:left;
  margin: 0 3px 0 3px;
}

.imgmin{
  width: 16px;
  height: 16px;
  margin-top: 4px;
}

.textsize{
